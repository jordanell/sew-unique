#hero {
  background-image: url('https://s3-us-west-2.amazonaws.com/sewunique-production/landing/hero.jpg');
  background-size: cover;
  height: 600px;

  #inner-hero {
    @include outer-container;

    position: relative;
    height: 600px;
  }

  #hero-links {
    @include shift(1);
    @include span-columns(10);

    margin-top: 10px;

    ul {
      float: right;
      background-color: rgba(90, 90, 90, 0.1);
      padding: 1em;
      border-radius: 4px;

      li {
        display: inline;
        margin: 0 5px;

        a {
          text-decoration: none;
          color: $white;
        }
      }
    }
  }

  #hero-content {
    @include shift(1);
    @include span-columns(10);

    color: white;
    position: relative;
    top: 10%;

    h3, h4, h5 {
      -webkit-text-stroke: 1px #BBB;
    }

    h3 {
      font-size: 50px;
      margin-bottom: 5px;
      font-weight: 400;
    }

    h5 {
      font-size: 30px;
      margin-top: 0;
      margin-bottom: 20px;
      font-weight: 500;
    }

    h4 {
      -webkit-text-stroke: 1px #EEE;
      font-size: 20px;
      font-weight: 200;
    }
  }
}
