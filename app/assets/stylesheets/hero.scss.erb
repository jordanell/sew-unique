#hero {
  background-image: url('https://s3-us-west-2.amazonaws.com/sewunique-production/landing/hero-photo.jpg');
  height: 600px;

  #inner-hero {
    @include outer-container;

    position: relative;
    height: 600px;
  }

  #hero-links {
    @include shift(1);
    @include span-columns(10);
    margin-top: 10px;

    ul {
      float: right;

      li {
        display: inline;
        margin-right: 10px;

        a {
          text-decoration: none;
          color: white;
        }
      }
    }
  }

  #hero-content {
    @include shift(1);
    @include span-columns(10);

    color: white;
    position: relative;
    top: 10%;

    h3 {
      font-size: 50px;
      margin-bottom: 5px;
      font-weight: 400;
    }

    h5 {
      font-size: 30px;
      margin-top: 0;
      margin-bottom: 20px;
      font-weight: 400;
    }

    h4 {
      font-size: 20px;
      font-weight: 200;
    }
  }
}
